<%- include('includes/head') %> 
<%- include('includes/nav') %>

<div class="container">
	<div class="row">
		<div class="col-lg-2"></div>
		<div class="col-lg-8 my-3">
			<h1 class="text-center">Contatos</h1>
			<p class="text-center lead">Crie ou edite seus contatos abaixo:</p>

			<% include('includes/messages') %>

			<form method="post" action="/contato/register" >
				<input type="hidden" name="_csrf" value=<%= csrfToken %>>
				<div class="form-group">
					<label>Nome: </label>
					<input type="text" class="form-control" name="nome" />
				</div>
				<div class="form-group">
					<label>Sobrenome: </label>
					<input type="text" class="form-control" name="sobrenome" />
				</div>
				<div class="form-group">
					<label>E-mail: </label>
					<input type="email" class="form-control" name="email" />
				</div>
				<div class="form-group">
					<label>Telefone: </label>
					<input type="tel" class="form-control" name="nome" />
				</div>
				<button type="submit" class="btn btn-primary">Salvar contato.</button>
			</form>
			
		</div>

		<div class="col-lg-2"></div>
	</div>
</div>

<%- include('includes/footer') %>
